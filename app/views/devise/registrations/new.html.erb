<div class="container">
  <h2>Регистрация</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-5' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Пароль' %>
      <% if @minimum_password_length %>
      <em>(минимум <%= @minimum_password_length %> символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control col-5' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Подтвердить пароль' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control col-5' %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: 'btn btn-primary' %>
    </div>
  <% end %>
  <br />
  <%= render "devise/shared/links" %>
</div>