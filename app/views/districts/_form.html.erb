<div class="container">
  <div class="row">
    <div class="col">
      <h3>Создать УЗ</h3><br />
    </div>
  </div>

<%= form_for @district do |f| %>
  <%= form_error_viewer(f) %>

  <div class="form-group row">
    <div class="col-sm-3 col-form-label">
      <%= f.label :name, 'Учреждение Здравоохранения' %>
    </div>
    <div class="col-sm-6">
      <%= f.text_area :name, class: "form-control", placeholder: 'Учреждение Здравоохранения', size: '20x5' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :phone, 'Телефон', class: "col-sm-3 col-form-label" %>
    <div class="col-sm-4">
      <%= f.telephone_field :phone, class: "form-control", placeholder: 'Телефон' %>
    </div>
  </div>
  <div class="form-group row">
    <%= label_tag '', '', class: "col-sm-3 col-form-label" %>
    <div class="col-sm-6">
      <%= f.submit 'Сохранить', class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Назад', :back, class: 'btn btn-secondary btn-lg' %>
    </div>
  </div>
<% end %>
</div>
