<div class="container">
  <div class="row">
    <div class="col">
      <h3>Создать пациента</h3><br />
    </div>
  </div>

<%= form_for @patient do |f| %>
  <%= form_error_viewer(f) %>

  <div class="form-group row">
    <%= f.label :identifier, 'Номер карточки', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= f.number_field :identifier, class: "form-control", placeholder: "Номер карточки" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :middle_name, 'Фамилия', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :middle_name, class: "form-control", placeholder: 'Фамилия' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :first_name, 'Имя', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :first_name, class: "form-control", placeholder: 'Имя' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :last_name, 'Отчество', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :last_name, class: "form-control", placeholder: 'Отчество' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :age, 'Возраст', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= f.number_field :age, class: "form-control", placeholder: 'Возраст' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :address, 'Адрес', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_field :address, class: "form-control", placeholder: 'Адрес' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :phone, 'Телефон', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= f.telephone_field :phone, class: "form-control", placeholder: 'Телефон' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :diagnosis, 'Диагноз', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.text_area :diagnosis, class: "form-control", placeholder: 'Диагноз', rows: '8' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :operation_date, 'Дата операции', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= f.date_field :operation_date, class: "form-control", placeholder: 'Дата операции' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :visit_date, 'Дата приёма', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-3">
      <%= f.date_field :visit_date, class: "form-control", placeholder: 'Дата приёма' %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :next_visit_date, 'Явиться через', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= select_tag 'interval', options_for_select(1..12), class: "form-control interval", placeholder: 'Дата явки' %>

      <%= f.hidden_field :next_visit_date %>
    </div>
    <div class="col-sm-2 col-form-label">
      мес.
    </div>
  </div>
  <div class="form-group row">
    <%= label_tag '', '', class: "col-sm-2 col-form-label" %>
    <div class="col-sm-6">
      <%= f.submit 'Сохранить', class: 'btn btn-primary btn-lg' %>
      <%= link_to 'Назад', :back, class: 'btn btn-secondary btn-lg' %>
    </div>
  </div>
<% end %>
</div>