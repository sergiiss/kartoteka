<div class="container-fluid">
  <%= link_to 'Добавить пациента', new_patient_path, class: 'btn btn-success', style: 'margin-bottom: 20px;' %>
  <%= link_to 'Прием в текущем месяце', root_path, class: 'btn btn-info', style: 'margin-bottom: 20px;' %>
  <div style="float: right">
    <%= link_to 'Выход', destroy_user_session_path, method: :delete, class: 'btn btn-secondary' %>
  </div>
  <%= form_for Patient.new, url: '/patients', method: :get, html: { class: 'form-inline md-form form-sm active-cyan active-cyan-2 mt-2' } do %>
    <i class="fas fa-search" aria-hidden="true"></i>
    <input class="form-control form-control-sm w-25 search-input" name="q" id="q" type="text" placeholder="Введите фамилию пациента" aria-label="Search">
  <% end %>
  <br />

  <%= render 'patients' %>
</div>

<% if params[:q] %>
  <%= link_to 'Показать всех пациентов', patients_path, class: 'btn btn-primary', style: 'margin-left: 15px;' %>
<% end %>