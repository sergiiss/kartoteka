<div class="container">
  <div class="row">
    <div class="col">
      <h3>Создать Приказ</h3><br />
    </div>
  </div>

  <%= form_for [@district, @quality_control, @decree] do |f| %>
    <%= form_error_viewer(f) %>

    <%= f.hidden_field :quality_control_id, value: @quality_control.id %>
    <div class="form-group row">
      <%= f.label :identifier, 'Номер приказа', class: "col-sm-3 col-form-label" %>
      <div class="col-sm-5">
        <%= f.number_field :identifier, class: "form-control", placeholder: 'Номер приказа' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3 col-form-label">
        <%= f.label :name, 'Название приказа' %>
      </div>
      <div class="col-sm-5">
        <%= f.text_area :name, class: "form-control", placeholder: 'Название приказа' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :date, 'Дата приказа', class: "col-sm-3 col-form-label" %>
      <div class="col-sm-5">
        <%= f.date_field :date, class: "form-control", placeholder: 'Дата приказа' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :option, 'Вид приказа', class: "col-sm-3 col-form-label" %>
      <div class="col-sm-5">
        <%= f.select :option, Decree::OPTION, class: "form-control", placeholder: 'Вид приказа' %>
      </div>
    </div>
    <div class="form-group row">
      <%= label_tag '', '', class: "col-sm-3 col-form-label" %>
      <div class="col-sm-6">
        <%= f.submit 'Сохранить', class: 'btn btn-primary btn-lg' %>
        <%= link_to 'Назад', :back, class: 'btn btn-secondary btn-lg' %>
      </div>
    </div>
  <% end %>
</div>
